<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookMeMobile.Pages.LoginPage">
  <StackLayout VerticalOptions="CenterAndExpand">
    <Label HorizontalOptions="Center" Text="Введите логин" FontSize="Large"/>
    <Entry x:Name="TextLogin" HorizontalTextAlignment="Center"/>
    <Label x:Name="Error"/>
    <Button x:Name="BtnSignIn" Text="Войти" Clicked="BtnSignIn_OnClicked"></Button>
  </StackLayout>
</ContentPage>