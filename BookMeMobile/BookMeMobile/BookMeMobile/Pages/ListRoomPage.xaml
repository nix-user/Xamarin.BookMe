<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookMeMobile.Pages.ListRoomPage">
  <ContentPage.Resources>
    <ResourceDictionary>
    </ResourceDictionary>
  </ContentPage.Resources>
  <StackLayout>
    <Label x:Name="isRoom" Text="Комнат нет" FontSize="24" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" IsVisible="False"/>
    <ListView x:Name="listUserRoomInRange" ItemsSource="{Binding}" RowHeight="80" VerticalOptions="Start">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.View>
               <StackLayout Orientation="Horizontal">
                  <Label Text = "{Binding Number,StringFormat='{0}' }" FontSize="Medium"  VerticalOptions="CenterAndExpand"/>
                  <Button HorizontalOptions="EndAndExpand" x:Name="btnBooking" ClassId="{Binding Id}" Text="Бронировать" VerticalOptions="Fill" FontSize="Large" Clicked="BtnBooking_OnClicked"/>
                </StackLayout>
            </ViewCell.View>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>